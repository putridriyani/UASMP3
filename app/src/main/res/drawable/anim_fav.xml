<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/green"
        android:drawable="@drawable/bookmarked"
        android:state_checked="true"/>
    <item
        android:id="@+id/gray"
        android:drawable="@drawable/un_bookmark" />
    <transition
        android:fromId="@id/green"
        android:toId="@id/gray"
        android:drawable="@drawable/bookmarked"/>
    <transition
        android:fromId="@id/gray"
        android:toId="@id/green"
        android:drawable="@drawable/un_bookmark"/>
</animated-selector>